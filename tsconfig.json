{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "lib": [
      "es2018",
      "dom",
      "es2019.array"
    ],
    "downlevelIteration": true,
    "esModuleInterop": true,
    "types": [
      "gherkin-testcafe"
    ]
  },
  "include": [
    "./**/*.ts"
  ]
}
